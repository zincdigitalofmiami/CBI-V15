config {
  type: "assertion",
  schema: "${dataform.projectConfig.vars.reference_dataset}",
  tags: ["data_quality", "freshness"]
}

-- Assert that market_daily has data within last 2 days
SELECT 1
WHERE (
  SELECT MAX(date)
  FROM ${ref("market_daily")}
  WHERE symbol = 'ZL'
) < DATE_SUB(CURRENT_DATE(), INTERVAL 2 DAY)

