-- Train/Val/Test Split Reference Table
-- Defines date ranges for each split

config {
  type: "table",
  schema: "reference",
  name: "train_val_test_splits",
  description: "Date ranges for train/val/test splits"
}

SELECT 'train' AS set_name, DATE '2010-01-01' AS start_date, DATE '2018-12-31' AS end_date UNION ALL
SELECT 'val',   DATE '2019-01-01', DATE '2021-12-31' UNION ALL
SELECT 'test',  DATE '2022-01-01', DATE '2025-12-31'

